{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  labels: [
    'Update',
  ],
  packageRules: [
    // Enable auto-merge for minor/patch updates.
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
    },
  ]
}
